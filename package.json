{
  "name": "programming-time-tracker",
  "displayName": "Programming Time Tracker",
  "description": "A VSCode extension for tracking programming time",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:programming-time-tracker.startTimer",
    "onCommand:programming-time-tracker.stopTimer",
    "onCommand:programming-time-tracker.showTime",
    "onCommand:programming-time-tracker.toggleTimer",
    "onCommand:programming-time-tracker.showStreakDashboard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "programming-time-tracker.startTimer",
        "title": "Start Programming Timer"
      },
      {
        "command": "programming-time-tracker.stopTimer",
        "title": "Stop Programming Timer"
      },
      {
        "command": "programming-time-tracker.showTime",
        "title": "Show Programming Time"
      },
      {
        "command": "programming-time-tracker.toggleTimer",
        "title": "Toggle Programming Timer"
      },
      {
        "command": "programming-time-tracker.showStreakDashboard",
        "title": "Show Coding Streak Dashboard"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "programming-time-tracker.startTimer"
        },
        {
          "command": "programming-time-tracker.stopTimer"
        },
        {
          "command": "programming-time-tracker.showTime"
        },
        {
          "command": "programming-time-tracker.showStreakDashboard"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  }
}
